<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <include layout="@layout/head_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
       >

        <ListView

            android:divider="#00000000"
            android:id="@+id/time_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="静心音乐"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="0.1dp"
        android:background="@color/gray"/>

    <TextView
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="临时锁定"/>
    <RelativeLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

       <include layout="@layout/mynumberpicker"
           android:id="@+id/numpickrelay" />
        <TextView
            android:id="@+id/time1"
            android:layout_toRightOf="@id/numpickrelay"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="h"/>

        <include layout="@layout/mynumberpickerminute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numpickrelay2" android:layout_toRightOf="@id/time1"/>

        <TextView
            android:id="@+id/time2"
            android:layout_toRightOf="@id/numpickrelay2"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="min"/>
        <LinearLayout
            android:id="@+id/switch_view_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/time2"
            android:layout_marginLeft="38dp"
            android:orientation="vertical"
            android:layout_centerVertical="true" >


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>